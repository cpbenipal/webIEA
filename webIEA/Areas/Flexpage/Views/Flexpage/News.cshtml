@model Flexpage.Abstract.DTO.NewsViewModel


<div id="newsFrame_@Model.ID" class="newsFrame">
    
        <div id="visibleNews_@Model.ID" class="@(Model.ScrollAnimation ? "forAnimate" : String.Empty) visibleNews">
            @foreach (var rec in Model.Records)
            {
                @Html.Partial("~/Areas/Flexpage/Views/Flexpage/NewsRecordContainer.cshtml", rec, new ViewDataDictionary() { { "IsAdmin", Model.AdminMode }, { "ShowAdminControls", Model.ShowAdminControls }, { "ViewTemplate", Model.TemplateView } })
            }
            <div style="clear:both;"></div>
        </div>
    
</div>

@helper CreatePagerElement(int num)
{
    <li class='news-pager-item @(Model.CurrentPage == num ? "active" : "")' pageno="@num">
        @if (Model.ScrollAnimation)
        {
            @*if (Model.CurrentPage != num)
            {
                <a href='@string.Format("/{0}?{1}pageNo={2}", ViewBag.alias, Model.NewPageUrl, num)'>@num</a>
            }
            else
            {*@
                <a href='javascript:void(0);'>@num</a>
            //}
        }
        else
        {
            @*if (Model.CurrentPage != num)
            {
                <a href='@string.Format("/{0}?{1}pageNo={2}", ViewBag.alias, Model.NewPageUrl, num)'>@num</a>
            }
            else
            {*@
                <a href='@string.Format("/{0}?{1}pageNo={2}", ViewBag.alias, Model.NewPageUrl, num)'>@num</a>
            //}
        }
    </li>
}

@helper CreatePagerSeparator()
{
    <li class='news-pager-item'>
        <a href='javascript:void(0);'>...</a>
    </li>
}


@if (Model.ShowPager && Model.TotalRecordsCount > Model.RecordsPerPage)
{
    int pagesCount = (int)Math.Ceiling((double)Model.TotalRecordsCount / Model.RecordsPerPage);
    <div id="pagerWrapper_@Model.ID">
        <ul class="news-pager pagination pagination-sm">

            @if (Model.ShowPagerButtons)
            {
                <li id="prevLinkWrapper@(Model.ID)" style="@(Model.CurrentPage - 1 <= 0 ? "display:none" : "")">
                    @if (Model.ScrollAnimation)
                    {
                        <a id="prevLink@(Model.ID)" href='javascript:void(0);' aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    }
                    else
                    {
                        <a href='@string.Format("/{0}?{1}pageNo={2}", ViewBag.alias, Model.NewPageUrl, Model.CurrentPage - 1)' aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    }
                </li>
            }

            @if (Model.ShowPagerNumbers)
            {

                if (pagesCount < 10)
                {
                    for (int i = 1; i <= pagesCount; i++)
                    {
                        @CreatePagerElement(i)
                    }
                }
                else
                {
                    if (Model.CurrentPage < 5)
                    {
                        for (int i = 1; i <= 6; i++)
                        {
                            @CreatePagerElement(i)
                        }

                        CreatePagerSeparator();

                        for (int i = (pagesCount - 2); i <= pagesCount; i++)
                        {
                            @CreatePagerElement(i)
                        }
                    }

                    else if (Model.CurrentPage > (pagesCount - 5))
                    {
                        for (int i = 1; i <= 3; i++)
                        {
                            @CreatePagerElement(i)
                        }

                        CreatePagerSeparator();

                        for (int i = (pagesCount - 6); i <= pagesCount; i++)
                        {
                            @CreatePagerElement(i)
                        }
                    }
                    else
                    {
                        for (int i = 1; i <= 3; i++)
                        {
                            @CreatePagerElement(i)
                        }

                        CreatePagerSeparator();

                        for (int i = (Model.CurrentPage - 1); i <= (Model.CurrentPage + 2); i++)
                        {
                            @CreatePagerElement(i)
                        }

                        @CreatePagerSeparator()

                        for (int i = (pagesCount - 2); i <= pagesCount; i++)
                        {
                            @CreatePagerElement(i)
                        }
                    }
                }
            }

            @if (Model.ShowPager && Model.ShowPagerButtons && !Model.ShowPagerNumbers)
            {
                if ((Model.CurrentPage - 1 > 0) && (Model.CurrentPage + 1 <= pagesCount))
                {
                    @CreatePagerSeparator()
                }
            }

            @if (Model.ShowPagerButtons)
            {
                <li id="nextLinkWrapper@(Model.ID)" style="@(Model.CurrentPage + 1 > pagesCount ? "display:none" : "")">
                    @if (Model.ScrollAnimation)
                    {
                        <a id="nextLink@(Model.ID)" href="javascript:void(0);" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    }
                    else
                    {

                        <a href="@string.Format("/{0}?{1}pageNo={2}", ViewBag.alias, Model.NewPageUrl, Model.CurrentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>

                    }
                </li>
            }

        </ul>
    </div>

    if (Model.ScrollAnimation)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                var newsFlexpage = new NewsFlexpage(@Model.ID, @Model.RecordsPerPage, @pagesCount);
                newsFlexpage.init();
                });
        </script>
    }
}


@if (Model.AdminMode)
{
    <div class="">
        <div class="row text-center">
            <button class="btn btn-blue-fullcolor-radius" data-toggle="modal" data-target="#flexpage-popup-control"
                    onclick="fp_popupControlOpen({ command:'add', blockType: 'Event' }, fp_reload)">
                <i class="fas fa-plus"></i> Add new record
            </button>
        </div>
    </div>
}





