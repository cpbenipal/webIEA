@model Flexpage.Abstract.DTO.EventViewModel

<div class="newsRec-container">
        @{ if (ViewBag.IsAdmin && ViewBag.ShowAdminControls)
            {
                <table cellpadding='0' cellspacing='0'>
                    <tr>
                        <td>
                            <a href='javascript:void(0)' data-toggle="modal" data-target="#flexpage-popup-control"
                               onclick="fp_popupControlOpen({ command: 'edit', blockType: 'Event', blockID: @Model.ID }, fp_reload)">
                                <i class="far fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <a href='javascript:void(0)' onclick="fp_deleteNewsRecord(this, '@Model.ID')">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                </table>
            }
        }

    @{
        string view = String.Format("~/Areas/Flexpage/Views/Flexpage/NewsTemplates/{0}.cshtml", ViewBag.ViewTemplate);
        @Html.Partial(view, @Model)
    }
</div>