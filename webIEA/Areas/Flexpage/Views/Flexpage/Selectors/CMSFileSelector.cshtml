@model Flexpage.Models.CMSFileSelectorModel
@Scripts.Render(Html.Action("GetScriptPath", "Settings", new { area = "Flexpage" }).ToString())
@{
    string title = (string)ViewData["Title"];
}
<div class="fp_browserSelector">
    @Html.Partial("~/Areas/Flexpage/Views/Flexpage/Browser.cshtml", Model.Browser)
</div>
<script type="text/javascript">
    var _selectedFolder = '';

    $(function(){
        $('#flexpage-modal-header_1 > h3').html('CHOOSE PW FILE');
    });
    
    function fp_getSelectedObject(e) {
        var $rows = $(".fp_folderContent [class*='dxgvSelectedRow']");
        var result = [];
        if ($rows.length > 0) {
            $rows.each(function (i, row) {
                result.push({ id: $(row).find("[data-rowid]").first().attr("data-rowid") })
            });
        }
        if (window.parent.cms_processPWLink !== undefined)
            window.parent.cms_processPWLink(result); 
    }
</script>