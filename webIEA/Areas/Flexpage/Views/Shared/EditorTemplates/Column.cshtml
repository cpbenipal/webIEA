@model Flexpage.Models.ColumnModel

<div class="flexpage panel panel-default multi-column">
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.Order, new {@class = "hidden-order"})

    <a class="panel-group">
    </a>
    <div class="panel-heading  panel-page">
        <a class="panel-group">
        </a><h4 class="panel-title">
            <a class="panel-group">
            </a>
            <a data-toggle="collapse" href=@String.Format("#columEditorCollapse{0}", Model.Index) class="align-box" style="min-height: 16px; margin: 5px 0">
                @Model.Title.Current
                <span class="pull-right">
                    <i class="fas fa-chevron-down rotate"></i>
                </span>
            </a>
        </h4>
    </div>
    <div id=@String.Format("columEditorCollapse{0}", Model.Index) class="panel-collapse collapse collapse-field-container">
        <div class="form-group">
            <div class="row">
                <div class="col-md-12">
                    <label for="multicolumn-name">Title:</label>
                    @Html.EditorFor(m => m.Title, "LocalizedString")
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label>Width: <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="" data-original-title="Default tooltip"></i></label>
            </div>
        </div>
        <div class="form-group radio-group">
            <div class="row align-items-form form-group">
                <div class="col-md-4">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(m => m.WidthType, 0)
                        Custom
                    </label>
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(m => m.Width, new { @class = "form-control", placeholder = "Text input" })
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(m => m.CustomWidthUnit, Model.Units, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(m => m.WidthType, 1)
                        Full width
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(m => m.WidthType, 2)
                        Minimum width
                    </label>
                </div>
            </div>
            @if ((int)ViewData["Count"] > 1)
            {
                <div class="row">
                    <div class="col-md-12">
                        <a href="#" onclick="fp_multiColumn_DeleteColumn(@Model.Index)" class="delete pull-right">
                            Delete column
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
