@model Flexpage.Models.FAQModel


<!--Sources settings-->
<div id="sections" class="tab-pane fade">
    <div class="row records-faq">
        <div class="col-md-10">
            <h4 class="title-main-block">Themes <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Sections list"></i></h4>
        </div>
        <div class="col-md-2">
            <div class="pull-right">
                <a data-toggle="modal" data-target="#news-add-new">
                    <button id="addnewbtn" type="button" class="btn btn-orange" onclick="fp_AddNewFAQSection()">
                        Add new
                    </button>
                </a>
            </div>
        </div>
    </div>


    <div class="row custom-tabs-faq">
        <div class="col-xs-12 fp_position-relative">
            @{Html.RenderPartial("~/Areas/Flexpage/Views/Shared/EditorTemplates/FAQ/_SectionsGrid.cshtml", Model);}
        </div>
    </div>
</div>


<script type="text/javascript">

    function fp_AddNewFAQSection() {

        var gridSections = eval("fp_FAQSection" + @Model.ID);
        gridSections.AddNewRow();
    }

</script>